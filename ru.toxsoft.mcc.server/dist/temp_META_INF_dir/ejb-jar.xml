<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:ejb="http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
	version="3.1">
	<interceptors>
		<interceptor>
			<interceptor-class>ru.toxsoft.s5.server.impl.transaction.S5TransactionInterceptor</interceptor-class>
		</interceptor>
	</interceptors>
	<assembly-descriptor>
		<application-exception>
			<exception-class>ru.toxsoft.tslib.error.TsRuntimeException</exception-class>
			<rollback>true</rollback>
			<inherited>true</inherited>
		</application-exception>
		<application-exception>
			<exception-class>java.lang.Exception</exception-class>
			<rollback>true</rollback>
			<inherited>true</inherited>
		</application-exception>
		<interceptor-binding>
			<ejb-name>*</ejb-name>
			<interceptor-class>ru.toxsoft.s5.server.impl.transaction.S5TransactionInterceptor</interceptor-class>
		</interceptor-binding>
	</assembly-descriptor>
	<!-- mvk: это нужно только для службы IPortableService. Она в проекте не используется
	<enterprise-beans>
		<session>
			<ejb-name>S5PortableServiceSessionImpl</ejb-name>
			<env-entry>
				<env-entry-name>moduleFactoryClassName</env-entry-name>
				<env-entry-type>java.lang.String</env-entry-type>
				<env-entry-value>ru.toxsoft.metro.server.services.portable.modules.MetroPortableModuleFactory</env-entry-value>
				<injection-target>
					<injection-target-class>ru.toxsoft.s5.server.services.portable.S5PortableServiceSessionImpl</injection-target-class>
					<injection-target-name>moduleFactoryClassName</injection-target-name>
				</injection-target>
			</env-entry>
		</session>
	</enterprise-beans>
	-->
</ejb-jar>